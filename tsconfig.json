{
  "compilerOptions": {
    "outDir": "./lib/esm",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "es2016", "es2017"],
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "lib", "e2e"]
}
